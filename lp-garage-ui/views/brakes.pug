extends layout

block content 
  -var vehicleData 
  -var partName 
  -var subpartName = subpartName||""
  div(id="wrapper").d-flex
    div(id="page-content-wrapper")
        -var page="Brakes"
        include navbar.pug 
        .container-fluid
            .row.flex-nowrap
                include vehicleNav
                .col.py-3
                    h1 Frenos
                    .col-lg-5
                      form#form-breaks.needs-validation(novalidate action="#" method="post")
                        h3 Altura del Centro de Gravedad
                        label.form-label(for="breaks_wheelbase") Distancia entre ejes 
                        .input-group.mb-3 
                          -var fieldValue = getProperty(vehicleData, "Brakes.wheelbase")
                          if fieldValue
                            -var wheelbase = unitRE.exec(fieldValue)[1] || fieldValue
                            -var wheelbase_units = unitRE(fieldValue)[2] || ""
                          else 
                            -var wheelbase = ""
                            -var wheelbase_units="cm"
                          input.form-control.align-right(
                            id="breaks_wheelbase"
                            type="number"
                            step="any"
                            value= wheelbase 
                            data-bound="Breaks.wheelbase"
                            required
                          )
                          select.form-select.input-group-text.unit(
                            id="breaks_wheelbase_units"
                            aria-label="Unidades Distancia entre ejes"
                            data-from="breaks_wheelbase"
                          )
                            +unitOption("cm", "cm", wheelbase_units)
                            +unitOption("m", "m", wheelbase_untis)
                            +unitOption("in", "pulg", wheelbase_units)
