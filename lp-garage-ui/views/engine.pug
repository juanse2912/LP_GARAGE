extends layout

block content 
  -var vehicleData 
  -var partName 
  -var subpartName = subpartName||"EnginePower"
  div(id="wrapper").d-flex
    //- Page Content
    div(id="page-content-wrapper")
        -var page="Engine"
        include navbar.pug 
        .container-fluid
            .row.flex-nowrap
                include vehicleNav
                .col.py-3
                    h1 Motor

                    ul.nav.nav-pills
                        li.nav-item 
                            a(
                                class="nav-link "+(subpartName=="EnginePower"?"active":"") 
                                href=(subpartName=="EnginePower"?"#":"/Engine/EnginePower?vehicleId="+vehicleData.id) 
                            ) Potencia
                        li.nav-item 
                            a(
                                class="nav-link "+(subpartName=="EngineForce"?"active":"") 
                                href=(subpartName=="EngineForce"?"#":"/Engine/EngineForce?vehicleId="+vehicleData.id)
                            ) Fuerzas
                        li.nav-item 
                            a(
                                class="nav-link "+(subpartName=="EngineRectification"?"active":"") 
                                href=(subpartName=="EngineRectification"?"#":"/Engine/EngineRectification?vehicleId="+vehicleData.id)
                            ) Rectificaci√≥n
                        li.nav-item 
                            a(
                                class="nav-link "+(subpartName=="EngineNozzles"?"active":"") 
                                href=(subpartName=="EngineNozzles"?"#":"/Engine/EngineNozzles?vehicleId="+vehicleData.id)
                            ) Toberas
                    .row
                        case subpartName 
                            when "EnginePower"
                                include enginePower 
                            when "EngineForce"
                                include engineForces 
                            when "EngineRectification"
                                include engineRectification
                            when "EngineNozzles"
                                include engineNozzles

            
