doctype html
html
  head
    title= title

    //- Bootstrap
    link(
        href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css' 
        rel='stylesheet' 
        integrity='sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6' 
        crossorigin='anonymous'
    )
    script(
        src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js' 
        integrity='sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf' 
        crossorigin='anonymous'
    )
    meta(name='viewport' content='width=device-width, initial-scale=1')
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    //- End bootstrap

    script(src="/javascripts/util.js")
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/sidebar.css')
  -var getProperty = function(vd, property) { let p=property.split("."); return p.reduce( (obj, node) => { return (obj || {})[node]}, vd) }
  //- unit handling
  -var unitRE = /^([\d\.e-]*)\s(.*)$/
  //- unit change for input fields
  mixin unitOption(unitValue, unitName, selectedVal)
    option(value=unitValue selected=(unitValue==selectedVal?true:false))= unitName
  //- unit change for calculated values
  mixin unitButton(value, options, dataElement)
    .btn-group.ml-2 
      button.btn.btn-secondary.btn-sm(type="button")=options[value]
        button.btn.btn-sm.btn-secondary.dropdown-toggle.drop-down-toggle-split(
          data-bs-toggle="dropdown"
          aria-expanded="false"

        )
          span.visually-hidden unit toggle   
      ul.dropdown-menu 
        each l, v in options 
          li  
            a.dropdown-item.unit(
              href="#"
              data-from=dataElement 
              data-unit=v
            )=l
  body
    //-General purpose alert container
    div#alertContainer(tabindex=-1).fixed-bottom.fade
    //-General purpose confirmation modal
    div#confirmDialog(tabindex="-1" aria-labelledby="confirmDialogTitle" aria-hidden="true").modal.fade
      .modal-dialog 
          .modal-content 
              .modal-header 
                h5#confirmDialogTitle.modal-title=""
              .modal-body=""
              .modal-footer 
                button(
                    id="confirmDialogBtnCancel"
                    type="button"
                    data-bs-dismiss="modal"
                ).btn.btn-secondary Cancelar 
                button(
                  type="button" 
                  id="confirmDialogBtnAccept"
                ).btn.btn-primary Continuar
    block content
