doctype html
html
  head
    title="LP Garage" + (vehicleData && vehicleData.id ? " | " +vehicleData.id : "")

    //- Bootstrap
    link(
        href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css' 
        rel='stylesheet' 
        integrity='sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6' 
        crossorigin='anonymous'
    )
    script(
        src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js' 
        integrity='sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf' 
        crossorigin='anonymous'
    )
    meta(name='viewport' content='width=device-width, initial-scale=1')
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    //- End bootstrap
    script(src="/javascripts/util.js")
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/sidebar.css')
  include commonsLib
  body
    //-General purpose alert container
    div#alertContainer(tabindex=-1).fixed-bottom.fade
    //-General purpose confirmation modal
    div#confirmDialog(tabindex="-1" aria-labelledby="confirmDialogTitle" aria-hidden="true").modal.fade
      .modal-dialog 
          .modal-content 
              .modal-header 
                h5#confirmDialogTitle.modal-title=""
              .modal-body=""
              .modal-footer 
                button(
                    id="confirmDialogBtnCancel"
                    type="button"
                    data-bs-dismiss="modal"
                ).btn.btn-secondary Cancelar 
                button(
                  type="button" 
                  id="confirmDialogBtnAccept"
                ).btn.btn-primary Continuar
    block content
